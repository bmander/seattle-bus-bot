<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:shrinkColumns="2">
    <TableRow>
       <TextView
            android:layout_column="0"
            android:id="@+id/route"
            android:layout_width="80sp"
            android:textSize="@dimen/stop_info_route_size"
            android:textColor="@color/stop_info_route_color">
        </TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_column="1">
            <TextView
                 android:id="@+id/destination"
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content"
                 android:textColor="@color/stop_info_info_color"
                 android:textStyle="bold">
            </TextView>
            <TextView
                 android:id="@+id/time"
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/stop_info_subinfo_size">
            </TextView>     
            <TextView
                 android:id="@+id/status"
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/stop_info_subinfo_size">
            </TextView>
        </LinearLayout>
        <TextView
            android:layout_column="2"
            android:id="@+id/eta"
            android:textSize="@dimen/stop_info_eta_size"
            android:textColor="@color/stop_info_eta_color"
            android:paddingRight="10sp">
        </TextView>
    </TableRow>
</TableLayout>